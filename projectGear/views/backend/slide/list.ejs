  <script type="text/javascript">
    $( document ).ready(function() {
      listSlide(1);
      $('.slide-main').addClass('active')
      $('.slide-info').addClass('active')
    });

    $('select').on('change', function() {
     listSlide(1);
    // alert( this.value );
  })



    function listSlide(page) {
      var slide_status = $('.slide-status :selected').val();
      var slide_isMain = $('.slide-isMain :selected').val();

      $.ajax({
        url: '/admin/slide/listSlide',
        type: 'GET',
        data: {
          page : page,
          slide_status : slide_status,
          slide_isMain:slide_isMain
        },
        dataType: 'json',
      }).done(function(results){
        if (results.status) {

        // console.log(results.status);

        var xhtml = ''; 

        if (results.listSlide && results.listSlide.length) {
          for (var i = 0 ;  i <= results.listSlide.length - 1; i++) {


            xhtml += '<tr>';

            xhtml += '<td>'+results.listSlide[i].slideTitle+'</td>';

            xhtml += '<td><img src="/upload/slide/'+results.listSlide[i].slideImage+'" style="width:150px ; height:70px"></td>';
            

            if (results.listSlide[i].isSlideMain == 1) {
              xhtml += '<td><span class="label label-success">Trang chính</span></td>';
            }else {
              xhtml += '<td><span class="label label-danger">Trang phụ</span></td>';
            }

            if (results.listSlide[i].status == 1) {
              xhtml += '<td><span class="label label-success">Active</span></td>';
            }else {
              xhtml += '<td><span class="label label-danger">Block</span></td>';
            }


            xhtml += '<td>'+results.listSlide[i].slideLink+'</td>';

            xhtml += '<td><a href="/admin/slide/edit/'+results.listSlide[i]._id+'"><span class="label label-warning"><span class="glyphicon glyphicon-edit"></span>Sửa</span></a> <a href="javascript:void(0)" onclick="removeSlide(\''+results.listSlide[i]._id+'\')"><span class="label label-danger"><span class="glyphicon glyphicon-remove"></span> Xóa</span></a>';


            xhtml += '</td>'
            xhtml += '</tr>';

          }
          $("table tbody").html(xhtml)

        }else{
         $("table tbody").html('Không tìm thấy!');
       }


       if(results.totalPage > 1) {
        var pagiHtml = '';
        pagiHtml ='<ul class="pagination">';
        if (results.page != 1){ 
          var pagePriv = parseInt(results.page) - 1; 
          pagiHtml += '<li class="" ><a href="javascript:void(0)" onclick="listSlide(1)""><i class="fa fa-step-backward" aria-hidden="true"></i></a></li>  ';                  
          pagiHtml += '<li class="" ><a href="javascript:void(0)" onclick="listSlide('+ pagePriv +')"><i class="fa fa-chevron-left" aria-hidden="true"></i></a></li>';
        }

        var _begin =  results.page - 8; 
        var _end = results.page + 8;
        if (_begin < 1){ 
          _begin = 1;
        }
        if (_end > results.totalPage ) {
          _end = results.totalPage;
        } 
        for (var i = _begin; i <= _end; i++) {
          if(results.page == i) { 
            pagiHtml += '<li class="active" ><a href="javascript:void(0)">'+ i +'</a></li>';
          } else { 
            pagiHtml += '<li><a href="javascript:void(0)" onclick="listSlide('+ i +')">'+i+'</a></li>';
          }
        } 
        if (results.page < results.totalPage ) {
          var pageNext = parseInt(results.page) + 1; 
          pagiHtml += '<li class="" ><a href="javascript:void(0)" onclick="listSlide('+ pageNext +')"><i class="fa fa-chevron-right" aria-hidden="true"></i></a></li>';
          pagiHtml += '<li class="" ><a href="javascript:void(0)" onclick="listSlide('+ results.totalPage +')"><i class="fa fa-step-forward" aria-hidden="true"></i></a></li>';
        } 
        pagiHtml += '</ul>';

        $('#pagination-list-color').html(pagiHtml);
      } else {
        $('#pagination-list-color').html('');
      }

    }
  })
    }

  </script>

  <script>
    function readURL(input) {

      if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function(e) {
          $('#slidePreview').attr('src', e.target.result);
        }

        reader.readAsDataURL(input.files[0]);
      }
    }

    $("#fileSlide").change(function() {
      readURL(this);
    });

    function postSlideAdd(){

      var slideTitle = $( "input[name=slideTitle]").val();
      var slideContent = $("input[name=slideContent]").val();
      var slideLink = $("input[name=slideLink]").val();
      var isMain = $("input[name=isMain]:checked").val();
      var status = $("input[name=status]:checked").val();
      var slideImage =  $('input[type=file]')[0].files[0];

      var formData = new FormData();

      formData.append('fileSlide',slideImage)
      formData.append('slideTitle' , slideTitle)
      formData.append('slideContent' , slideContent)
      formData.append('slideLink' , slideLink)
      formData.append('isMain' , isMain)
      formData.append('status' , status)


      $.ajax({
        url: '/admin/slide/addSlide',
        type: 'post',
        data: formData,
        contentType:false,
        processData:false
      }).done(function(results){

        if (results.status == true) {
          $.confirm({
            title: 'Thông báo!',
            content:'<span class="text-success"><strong class="fa fa-check"></strong>Thêm trang trình bày thành công !</span>',
            buttons: {
              'Ok': function () {
                window.location.replace('/admin/slide/list');
              }
            }
          });
        }else{
          console.log(results)
          $.alert({
            title: 'Thông Báo !',
            content: '<span class="text-danger"><strong class="fa fa-close"></strong>'+results.errors[0].msg+'</span>',
          })
        }
      })
    }

  </script>

  <script>
    function removeSlide(id){
      $.confirm({
        title : 'Xác nhận !',
        content : 'Bạn có chắc chắn muốn xóa trang trình bày này',
        buttons: {
          'Đồng Ý': function () {
            $.ajax({
              url: '/admin/slide/delete',
              type: 'post',
              data: {
                id : id
              },
              dataType: 'json',
            }).done(function(results){
              if (results.status) {
                $.alert({
                  title: 'Thông Báo!',
                  content: '<span class="text-success"><strong class="fa fa-check"></strong>Xóa thành công</span>'
                })
                location.reload();
              }else{
                $.alert({
                  title: 'Thông Báo!',
                  content: '<span class="text-danger"><strong class="fa fa-close"></strong>Xóa thất bại </span>'
                })
              }
            })
          },
          'Hủy Bỏ': function () {
          },
        }
      })
    }
  </script>