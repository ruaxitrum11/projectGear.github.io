
<div class="social-area" id="social">
	<div class="container-fluid">
		<div class="follow-social">
			<div class="follow-logo">
				<ul>
					<li>
						<a class="twitter" href="">
							<i class="fa fa-twitter" aria-hidden="true"></i>
						</a>
					</li>
					<li>
						<a class="facebook" href="">
							<i class="fa fa-facebook-official" aria-hidden="true"></i>
						</a>
					</li>
					<li>
						<a class="twitch" href="">
							<i class="fa fa-twitch" aria-hidden="true"></i>
						</a>
					</li>
					<li>
						<a class="instagram" href="">
							<i class="fa fa-instagram" aria-hidden="true"></i>
						</a>
					</li>
					<li>
						<a class="youtube" href="">
							<i class="fa fa-youtube-play" aria-hidden="true"></i>
						</a>
					</li>
				</ul>				
			</div>
			<div class="follow-text">
				<p>For Gamers . By Gamers .</p>
			</div>
		</div>
		<div class="review-social hidden-xs">
			<div class="review-gallery">
				<ul>
					<%if(review && review.length){%>
					<%for(var i =0 ; i<review.length ; i++){%>
					<%if(i==(review.length-1)/2 || i == review.length /2 ){%>
					<li class="review-gallery-user review-active" >
						<img src="/upload/avatar/<%=review[i].reviewImage%>" >
					</li>
					<%}else{%>
					<li class="review-gallery-user" >
						<img src="/upload/avatar/<%=review[i].reviewImage%>" >
					</li>
					<%}%>
					<%}%>
					<%}%>
				</ul>
			</div>
			<%if(review && review.length){%>
			<%for(var i =0 ; i<review.length ; i++){%>
			<%if(i==(review.length-1)/2 || i == review.length /2){%>
			<div class="review-user" >
				<p class="review-user-name">
					<%=review[i].reviewName%>
				</p>
				<p class="review-user-address">
					<%=review[i].reviewDescription%>
				</p>
			</div>
			<%}else{%>
			<div class="review-user"  style="display: none;">
				<p class="review-user-name">
					<%=review[i].reviewName%>
				</p>
				<p class="review-user-address">
					<%=review[i].reviewDescription%>
				</p>
			</div>
			<%}%>
			<%}%>
			<%}%>
			<div class="review-information">
				<span class="review-button review-previous"><i class="fa fa-chevron-left" aria-hidden="true"></i></span>
				<%if(review && review.length){%>
				<%for(var i =0 ; i<review.length ; i++){%>
				<%if(i==(review.length-1)/2 || i == review.length /2){%>
				<span class="review-content">
					<%=review[i].reviewContent%>
				</span>
				<%}else{%>
				<span class="review-content" style="display: none;">
					<%=review[i].reviewContent%>
				</span>
				<%}%>
				<%}%>
				<%}%>
				<span class="review-button review-next"><i class="fa fa-chevron-right" aria-hidden="true"></i></span>
			</div>
		</div>
	</div>
</div>
<div class="other-product-category">
	<% for (var i = 0; i < categoryBanner.length; i++) {%>
	<div class="other-product-category-item">
		<div onclick="location.href='/category/<%=categoryBanner[i].categoryNameSummary%>';" class="other-product-category-scale category-banner-<%=categoryBanner[i]._id%>" 
			style = "background-image: url(/upload/thumbProduct/<%=categoryBanner[i].categoryBanner%>)">
			<p><%=categoryBanner[i].categoryName%></p>
		</div>
	</div>
	<%}%>

</div>

<script type="text/javascript">
	var review = <%- JSON.stringify(review) %> 

</script>