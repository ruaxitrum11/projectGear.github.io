	<!-- header md -->
	<header class="nav-wrap hidden-xs hidden-sm">
		<nav class="navbar navbar-default navbar-default-header">
			<div class="container-fluid">
				<div class="navbar-header col-md-2">
					<a href="/"><img src="/img/homepage/logo.png"></a>
				</div>
				<div class="navbar-menu navbar-menu-items col-md-8">
					<ul class="nav navbar-nav" >
						<% if(categoryMenu && categoryMenu.length) {%>
						<% for(var i=0 ; i<categoryMenu.length; i++) {%>
						<li class="navbar-item"><a href="/category/<%=categoryMenu[i].categoryNameSummary%>"><%=categoryMenu[i].categoryName%></a></li>
						<%}%>
						<%}%>
						
						<li class="navbar-item navbar-item-dropdown">
							<a href="#" class="dropbtn">
								sản phẩm khác
								<i class="fa fa-chevron-down" aria-hidden="true"></i>
							</a>
							<div class="dropdown-content">
								<% if(categoryDropDown && categoryDropDown.length) {%>
								<% for(var i=0 ; i < categoryDropDown.length; i++) {%>
								<a href="/category/<%=categoryDropDown[i].categoryNameSummary%>"><%=categoryDropDown[i].categoryName%></a>
								<%}%>
								<%}%>
							</div>
						</li>	
					</ul>
				</div>
				<div class="navbar-menu-right col-md-2">
					<ul class="nav navbar-nav navbar-nav-right" >
						<%if(!user){%>
						<li class="navbar-item">
							<a href=# class="btn btn-lg" data-toggle="modal" data-target="#login-modal">
								<i class="fa fa-user" aria-hidden="true"></i>
							</a>
						</li>
						<%}else{%>
						<li class="navbar-item navbar-item-dropdown">
							<a href="#" class="btn btn-lg">
								<i class="fa fa-user" aria-hidden="true"></i>
								<i class="fa fa-chevron-down" aria-hidden="true"></i>
							</a>
							<div class="dropdown-content dropdown-content-user" style="right: 0;min-width: 200px;
							text-align: center;">
							<a href="/user/<%=user._id%>">Trang cá nhân</a>
							<a href="/user/logout">Đăng xuất</a>
						</div>
					</li>
					<%}%>
					<li class="navbar-item">
						<a href="#" data-toggle="modal" data-target="#search-modal">
							<i class="fa fa-search" aria-hidden="true"></i>
						</a>
					</li>
					<li class="navbar-item ">
						
						<a href="#" onclick="openCart()" data-toggle="modal" data-target="#cart-modal" data-direction='right'>
							<i class="fa fa-shopping-cart" aria-hidden="true" style="position: relative;"></i>
							<p class="number-product-cart" style="position: absolute">0</p>
						</a>
						
					</li>
				</ul>
			</div>
		</div>
	</nav>
