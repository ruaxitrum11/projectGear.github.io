<%- include('include/header-top') %>
<link rel="stylesheet" href="/css/homepage.css">
<link rel="stylesheet" href="/css/user.css">

<%- include('include/header')%>

<section>
	<div class="user-recommend-area">
		<div class="user-recommend">
			<div class="user-recommend-thumb" style="background-image: url('/upload/avatar/<%=userCurrent.avatar%>');">
			</div>
			<div class="user-recommend-content">
				<p><%=userCurrent.userName%></p>
				<%if(userCurrent.level == 1 ){%>
				<span>Member</span>
				<%}else if(userCurrent.level == 2){%>
				<span>Silver Member</span>
				<%}else if(userCurrent.level == 3){%>
				<span>Gold Member</span>
				<%}else if(userCurrent.level == 4){%>
				<span>Platinum Member</span>
				<%}%>

			</div>
		</div>
	</div>
	<div class="user-info-area">
		<div class="container-fluid">
			<div class="user-info-left col-sm-3">
				<ul>
					<li class="user-info-left-profile  user-info-left-active" onclick="showInfoProfile('<%=userCurrent._id%>')">
						<i class="fa fa-user"></i>
						<span>Thông tin cá nhân</span>
					</li>
					<li class="user-info-left-order" onclick="showOderHistory('<%=userCurrent._id%>',1)">
						<i class="fa fa-shopping-cart"></i>
						<span>Lịch sử giao dịch</span>
					</li>
					<li class="user-info-left-trophy"  onclick="showInfoLevel('<%=userCurrent._id%>')" >
						<i class="fa fa-trophy"></i>
						<span>Danh Hiệu</span>
					</li>
					<li class="user-info-left-pass" onclick="changePassword('<%=userCurrent._id%>')">
						<i class="fa fa-key"></i>
						<span>Mật khẩu</span>
					</li>
				</ul>
			</div>
			<div class="user-info-right col-sm-9">
				<div class="user-info-main" style="float: left;width: 100%;">
					<div class="user-info-profile">
						<h2 class="user-info-right-title">
							Thông tin cá nhân
						</h2>
						<div class="user-right-content">
							<div class="user-right-item">
								<p>Họ tên</p>
								<input type="text" name="nameUser" value="<%=userCurrent.nameUser%>">
							</div>
							<div class="user-right-item">
								<p>Ảnh đại diện</p>
								<input id="fileAvatar" type="file" name="file">
								<img id="avatarPreview" src="" style="width: 25%; margin : 15px 0" >
							</div>	
							<div class="user-right-item">
								<p>Email</p>
								<input type="text" disabled name="email" value="<%=userCurrent.email%>">
							</div>
							<div class="user-right-item">
								<p>Số điện thoại</p>
								<input type="text" disabled name="phoneNumber" value="<%=userCurrent.phoneNumber%>">
							</div>	
							<div class="user-right-item">
								<p>Địa chỉ</p>
								<input type="text" name="address" value="<%=userCurrent.address%>">
							</div>	
							<div class="user-right-item">
								<p>Ngày Sinh</p>
								<input type="date" name="birthDay" value="<%= moment(userCurrent.birthDay).format('YYYY-MM-DD')%>">
							</div>
							<div class="user-right-item">
								<p>Giới Tính</p>
								<input type="radio" name="gender" value="0" style="width: 5%" <%if (userCurrent.gender == 0){%>checked<%}%>><span style="font-size: 1.6rem;font-weight: 600" >Nam</span>
								<input type="radio" name="gender" value="1" style="width: 5%;margin-left: 25px" <%if (userCurrent.gender == 1){%>checked<%}%>><span style="font-size: 1.6rem;font-weight: 600" >Nữ</span>
							</div>
							<div class="user-right-item user-right-item-button">
								<input type="button" name="" value="Cập nhật" onclick="updateUserInfo('<%=userCurrent._id%>')">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


</section>

<%- include('include/all-modal') %>

<%- include('include/footer') %>
<script src="/js/user.js"></script>